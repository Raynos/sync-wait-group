{
  "compilerOptions": {
    "rootDir": ".",
    "incremental": true,
    "outDir": "build",
    "target": "ES2017",
    "types": ["node"],
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noStrictGenericChecks": false,
    "checkJs": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "*" : ["./types/*"]
    },
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "include": [
    "types/**/*.d.ts",
    "src/**/*",
    "test/**/*"
  ]
}
